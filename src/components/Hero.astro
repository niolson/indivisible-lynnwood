---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = 'Indivisible Lynnwood',
  subtitle = 'Building progressive power in our community. Together, we resist. Together, we rebuild. Together, we are indivisible.',
} = Astro.props;
---

<section class="hero" aria-label="Hero">
  <div class="container hero-inner">
    <h1 class="hero-title">{title}</h1>
    <p class="hero-subtitle">{subtitle}</p>
    <div class="hero-ctas">
      <a href="/join" class="btn btn--primary btn--lg">Join Us</a>
      {/* TODO: Replace with actual ActBlue URL */}
      <a
        href="https://secure.actblue.com/"
        class="btn btn--secondary btn--lg"
        target="_blank"
        rel="noopener noreferrer"
      >
        Donate
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    background: linear-gradient(135deg, var(--color-dark) 0%, var(--color-blue-dark) 100%);
    color: var(--color-white);
    padding-block: var(--space-4xl);
    text-align: center;
  }

  .hero-inner {
    max-width: 800px;
  }

  .hero-title {
    color: var(--color-white);
    margin-bottom: var(--space-lg);
    font-size: var(--font-size-4xl);
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-gray-200);
    margin-bottom: var(--space-2xl);
    line-height: var(--line-height-base);
  }

  .hero-ctas {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero {
      padding-block: var(--space-3xl);
    }

    .hero-title {
      font-size: var(--font-size-3xl);
    }

    .hero-subtitle {
      font-size: var(--font-size-lg);
    }
  }
</style>
