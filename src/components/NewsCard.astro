---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  image?: string;
  tags?: string[];
}

const { title, description, pubDate, slug, image, tags } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="news-card">
  <a href={`/news/${slug}`} class="news-card-link">
    {
      image && (
        <div class="news-card-image">
          <img src={image} alt="" loading="lazy" />
        </div>
      )
    }
    <div class="news-card-body">
      <time class="news-card-date" datetime={pubDate.toISOString()}>
        {formattedDate}
      </time>
      <h3 class="news-card-title">{title}</h3>
      <p class="news-card-desc">{description}</p>
      {
        tags && tags.length > 0 && (
          <ul class="news-card-tags">
            {tags.map((tag) => (
              <li>{tag}</li>
            ))}
          </ul>
        )
      }
    </div>
  </a>
</article>

<style>
  .news-card {
    background: var(--color-white);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: box-shadow var(--transition-base), transform var(--transition-base);
  }

  .news-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }

  .news-card-link {
    display: block;
    color: inherit;
    text-decoration: none;
  }

  .news-card-link:hover {
    text-decoration: none;
    color: inherit;
  }

  .news-card-image img {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  .news-card-body {
    padding: var(--space-lg);
  }

  .news-card-date {
    display: block;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-xs);
  }

  .news-card-title {
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-sm);
    color: var(--color-dark);
  }

  .news-card:hover .news-card-title {
    color: var(--color-blue);
  }

  .news-card-desc {
    font-size: var(--font-size-sm);
    color: var(--color-gray-700);
    line-height: var(--line-height-base);
  }

  .news-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-top: var(--space-md);
  }

  .news-card-tags li {
    background-color: var(--color-bg-alt);
    color: var(--color-blue);
    padding: 2px var(--space-sm);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 500;
  }
</style>
